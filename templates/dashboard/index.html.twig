{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div style="max-width: 800px; margin: 50px auto; padding: 20px; font-family: Arial, sans-serif;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <h1>Dashboard</h1>
        <a href="{{ path('app_logout') }}" style="padding: 8px 16px; background-color: #dc3545; color: white; text-decoration: none; border-radius: 4px;">
            Logout
        </a>
    </div>

    <div style="background-color: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #007bff;">
        <h2 style="margin-top: 0;">Welcome, {{ app.user.name }}!</h2>

        <div style="margin-top: 20px;">
            <p style="margin: 10px 0;"><strong>Name:</strong> {{ app.user.name }}</p>
            <p style="margin: 10px 0;"><strong>Email:</strong> {{ app.user.email }}</p>
        </div>
    </div>

    <div style="margin-top: 30px; padding: 15px; background-color: #d1ecf1; border-radius: 4px; color: #0c5460;">
        <p style="margin: 0;">You are successfully authenticated and viewing the dashboard.</p>
    </div>
</div>
{% endblock %}
